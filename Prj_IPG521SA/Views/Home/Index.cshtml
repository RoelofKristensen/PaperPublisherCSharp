@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>SACLA Conference Paper Management System</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Welcome to Sacla</h2>
        <p>
            This is a sample application that was created for assessment purposes as part of the CSIS3734/CS!Q3734 Module.All rights reserved.
        </p>
        
    </div>
    <div class="col-md-4">
        <h2>News</h2>
        <p>Visit our News Page to find out what is happening</p>
        <input type="button" value="See latest news >>" onclick="@("window.location.href='" + @Url.Action("news", "home") + "'");" />
    </div>
    <div class="col-md-4">
        <h2>Contact us</h2>
        <p>Give us a call or drop us an email to find out more about upcomming conferences and workshops.</p>
        <input type="button" value="See Contact details >>" onclick="@("window.location.href='" + @Url.Action("contact", "home") + "'");" />
    </div>
</div>